{
  "type": "module",
  "scripts": {
    "build": "swc ./src --ignore **/*.spec.ts --out-dir ./build --strip-leading-paths",
    "build:watch": "pnpm build --watch",
    "dev": "concurrently --raw -n API,BUILD,TYPESCRIPT \"pnpm start:watch\" \"pnpm build:watch\" \"tsc --noEmit --watch\"",
    "start": "node ./build/main.js",
    "start:watch": "chokidar --silent './build/**/*.js' '.env' -c 'kill-port 8080 && pnpm start'",
    "test": "vitest",
    "test:e2e": "vitest run -c vitest.config.e2e.ts"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.1",
    "@testcontainers/postgresql": "^10.16.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.1",
    "kill-port": "^2.0.1",
    "supertest": "^7.0.0",
    "testcontainers": "^10.16.0",
    "typescript": "^5.7.2",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/throttler": "^6.3.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "drizzle-orm": "^0.38.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "nestjs-cls": "^4.5.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "packageManager": "pnpm@9.15.0"
}
