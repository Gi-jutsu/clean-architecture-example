{
  "type": "module",
  "scripts": {
    "build": "swc ./src --ignore **/*.spec.ts --out-dir ./build --strip-leading-paths",
    "build:watch": "pnpm build --watch",
    "start": "node ./build/main.js",
    "start:development": "concurrently -n API,BUILD \"pnpm start:watch\" \"pnpm build:watch\"",
    "start:watch": "chokidar --silent './build/**/*.js' -c 'kill-port 8080 && pnpm start'",
    "test": "vitest",
    "test:e2e": "vitest run -c vitest.config.e2e.ts"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.7.9",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.14",
    "@vitest/coverage-v8": "^1.6.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1",
    "testcontainers": "^10.11.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "cookie-parser": "^1.4.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "packageManager": "pnpm@9.4.0"
}
