{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@identity-and-access/*": ["./src/identity-and-access/*"],
      "@shared-kernel/*": ["./src/shared-kernel/*"]
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
